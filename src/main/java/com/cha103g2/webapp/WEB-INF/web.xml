<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee
                      http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd"
	version="4.0" metadata-complete="true">

	<welcome-file-list>
		<welcome-file>index.html</welcome-file>
		<welcome-file>index.xhtml</welcome-file>
		<welcome-file>index.htm</welcome-file>
		<welcome-file>index.jsp</welcome-file>
	</welcome-file-list>
	
	<servlet>
		<servlet-name>RoomNumServlet</servlet-name>
		<servlet-class>com.cha103g2.roomNum.controller.RoomNumServlet</servlet-class>
		</servlet>
		<servlet-mapping>
		<servlet-name>RoomNumServlet</servlet-name>
		<url-pattern>/roomnum/roomnum.do</url-pattern>
	</servlet-mapping>
	
	
	<servlet>
		<servlet-name>DeptServlet</servlet-name>
		<servlet-class>com.cha103g2.department.controller.DeptServlet</servlet-class>
		</servlet>
		<servlet-mapping>
		<servlet-name>DeptServlet</servlet-name>
		<url-pattern>/dept.do</url-pattern>
	</servlet-mapping>
	
	<servlet>
		<servlet-name>EmpServlet</servlet-name>
		<servlet-class>com.cha103g2.employee.controller.EmpServlet</servlet-class>
		</servlet>
		<servlet-mapping>
		<servlet-name>EmpServlet</servlet-name>
		<url-pattern>/emp.do</url-pattern>
	</servlet-mapping>
	

	
	<resource-ref>
	    <description>DB Connection</description>
	    <res-ref-name>jdbc/TestDB</res-ref-name>
	    <res-type>javax.sql.DataSource</res-type>
	    <res-auth>Container</res-auth>
  	</resource-ref>
 

	
	
	<listener>
		<listener-class>com.cha103g2.listener.InitializerListener</listener-class>
	</listener>
	
	<filter>
        <filter-name>SessionInViewFilter</filter-name>
        <filter-class>com.cha103g2.filter.OpenSessionInViewFilter</filter-class>
    </filter>
    <filter-mapping>
        <filter-name>SessionInViewFilter</filter-name>
        <url-pattern>/*</url-pattern>
    </filter-mapping>
   
</web-app>
